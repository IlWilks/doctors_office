<h1>Add Appointment</h1>
<%= form_with(model: [@doctor, @appointment], local: true, class: "ui form" ) do |f| %>
  <%= f.label :patient %>
  <%= f.select :patient_id, @patients.collect { |u| [u.full_name, u.id] } %>
  <br />
  <%= f.label :time %>
  <%= f.select :time, ['morning', 'afternoon', 'evening'] %>
  <br />
  <%= f.submit class: "ui green button inverted" %>
<% end %>